<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bankApplication_kotlin">
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:name="com.example.bankApplication_kotlin.sharedPreference.PreferenceApplication"
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BankApplication_Kotlin">
    <activity
        android:name="com.example.bankApplication_kotlin.ui.SplashActivity"
        android:screenOrientation="portrait">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
    </activity>
        <activity
            android:name="com.example.bankApplication_kotlin.ui.LoginActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.RegisterIDActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.RegisterEmailActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.RegisterInfoActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.RegisterPwActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.FoundPWActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.FoundIDActivity"
            android:screenOrientation="portrait"/>
    </application>
</manifest>